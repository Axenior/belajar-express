<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title><%= title %></title>
</head>
<body class="container">
    <h1>Home</h1>

    <a href="/" class="btn btn-primary">Home</a>
    <a href="/about" class="btn btn-primary">About</a>
    <a href="/contact" class="btn btn-primary">Contact Us</a>
    <a href="/prodi" class="btn btn-primary">Prodi</a>
    <p>Ini halaman home</p>

    <h4>Berita Terkini</h4>
    <% berita.forEach(data => { %>
        <h5><%= data.judul %></h5>
        <p><%= data.isi %></p>
    <% }) %>

    <div id="mahasiswa">
        <h4>Data Mahasiswa</h4>
    </div>
     <script>
            const url = 'http://localhost:3000/mahasiswa'; // Replace with your API URL
            
            fetch(url)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    let mahasiswa = document.getElementById('mahasiswa');
                    console.log(JSON.stringify(data, null, 2));

                    data.data.forEach(item => {
                        // Create a new list item
                        // listItem.textContent = JSON.stringify(item, null, 2); // You can customize this format
                        const listItem = `
                            <li>Nama = ${item.nama} (${item.npm})</li>
                        `
                        mahasiswa.innerHTML += listItem
                    });
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                    console.log('Error fetching data');
                });
    </script>
</body>
</html>

